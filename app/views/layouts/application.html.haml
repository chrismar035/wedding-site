!!!
%html
  %head
    %title 
      -if @title
        =@title
        |
      Crayley: for officials
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'grid.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    = stylesheet_link_tag 'site.css', :media => 'screen, projection'

    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Sunshiney'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Montez'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Delius'

    =yield :header
  %body.bp
    .container
      #header.span-22.prepend-1.append-1
        %h2{ :style => "float:left;"}
          Hayley Facer & Christopher Marshall 
        %h3{ :style => "float:right;"}
          -if user_signed_in?
            Logged in as: #{current_user.email} 
            |
            =link_to 'Sign Out', sign_out_path
          -else
            =link_to 'Sign In', sign_in_path
            | 7.21.12
      .container.span-22.prepend-1.append-1
        .span-4
          %ul#top_nav
            %li= link_to 'Home', root_path
            %li= link_to 'Pics', pics_path
            %li= link_to 'Game', game_path
            -if user_signed_in?
              %li= link_to 'Guests', guests_path

        #main_content.span-18.append-2.last
          %h1= @title if @title
          -if notice
            %p.notice= notice
          -if alert
            %p.alert= alert
          = yield
      #footer.span-22.prepend-2.last
    = javascript_include_tag 'jquery-1.6.1.min.js'
    = yield :javascript
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-12130430-4']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
