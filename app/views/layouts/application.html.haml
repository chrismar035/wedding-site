!!!
%html
  %head
    %title 
      -if @title
        =@title
        |
      Crayley: for officials
    = favicon_link_tag
    = stylesheet_link_tag 'application'

    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Sunshiney'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Montez'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Delius'

    =yield :header
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{ :href => '/' }
            Hayley Facer & Christopher Marshall
          %ul.nav
            %li= link_to 'Home', root_path
            %li= link_to 'Info', info_path
            %li= link_to 'Pics', pics_path
            %li= link_to 'Game', game_path
            %li= link_to 'Registry', registry_path
            -if user_signed_in?
              %li= link_to 'Guests', guests_path
              %li= link_to 'Budget', budget_items_path
          %ul.nav.pull-right
            %li
              -if user_signed_in?
                Logged in as: #{current_user.email} 
                |
                =link_to 'Sign Out', sign_out_path
              -else
                =link_to 'Sign In', sign_in_path
            %li.brand 7.21.12
    .container-fluid
      .page-header
        %h1= @title if @title
      .span12
        -if notice
          .alert= notice
        -if alert
          .alert.alert-error= alert
      #main_content.span12
        = yield
      .navbar.navbar-fixed-bottom
        o-llo
    = javascript_include_tag 'application'
    = yield :javascript
