    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Calligraffitti&v1'
  %body.bp
    .container
      #header.span-24.last
        %h1
          Hayley Facer & Christopher Marshall 
          %br/
          are
          %br/
          Getting Married
      .container.span-24
        .span-20.prepend-2.append-2
          = yield
