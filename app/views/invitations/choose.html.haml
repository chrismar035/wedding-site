%p
  =link_to 'Back to Invitations', invitations_path

= form_tag populate_invitations_path do
  %table.table
    %thead
      %tr
        %td Guest
        %td Invite?
    %tbody
    - @guests.each do |g|
      - name = "guests[#{g.id}]"
      %tr
        %td= label_tag name, g.name
        %td= check_box_tag name

  = submit_tag 'Create Invitations'
  = link_to 'Cancel', invitations_path
