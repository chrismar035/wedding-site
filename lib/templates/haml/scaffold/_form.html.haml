%table
  = form_for @<%= singular_name %> do |f|
    - if @<%= singular_name %>.errors.any?
      #error_message
        %h5= "#{pluralize(@<%= singular_name %>.errors.count, 'error')} prohibited this <%= singular_name %> from being saved:"
        %ul
          - @<%= singular_name %>.errors.full_messages.each do |msg|
            %li= msg

    <% for attribute in attributes %>%tr
      %td
        = f.label :<%= attribute.name %>
      %td
        = f.<%= attribute.field_type %> :<%= attribute.name %>
        <% end %>

    %tr
      %td{ :colspan => 2}
        = f.submit 'Save'
        -unless @<%= singular_name %>.new_record?
          =link_to 'Cancel', @<%= singular_name %>

